{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["xo"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": ["svelte3"],
    "overrides": [
        {
            "files": ["*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "rules": {
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }],
        "quotes": ["warn", "double"],
        "space-before-blocks": [
            "warn",
            { "functions": "always", "keywords": "always", "classes": "always" }
        ],
        "space-before-function-paren": ["error", "never"],
        "no-unused-vars": "warn",
        "no-trailing-spaces": "off",
        "object-shorthand": "off"
    }
}
